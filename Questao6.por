programa {
  funcao inicio() {
    real peso, altura,imc

    escreva ("Escreva o seu peso: ")
    leia (peso)
    escreva ("\n")
    escreva ("Escreva o seu altura: ")
    leia (altura)
    escreva ("\n")

    imc = peso / (altura * altura)

    escreva ("O valor do imc: \n")
    escreva (imc)

  }
}

