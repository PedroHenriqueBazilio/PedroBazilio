programa{
  // calcular a média de 5 notas válidas
  
  funcao inicio(){
    real nota, media, somaNotas = 0.0
    inteiro contador

    para(contador = 1; contador <= 5; contador += 1){
      faca{
        escreva("\nDigite a nota ", contador, ": ")
        leia(nota)
      }enquanto(nota < 0 ou nota > 10)
      somaNotas = somaNotas + nota
    }
    media = somaNotas / 5
    escreva("Média: ", media)
  }
}
